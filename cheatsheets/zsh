# Start zsh without any config
zsh -d -f -i

# Looping over strings
for i in random string to print; do
    echo $i
done

# Show all keyboard shortcuts
bindkey

# Keyboard shortcuts

# Note: it is better to learn those ones than to come up with custom ones that
# are not necessarily implemented on a server for instance.

# Navigation
ctrl + a           # beginning of line
ctrl + e           # beginning of line

# Deletion
ctrl + u           # clear entire line
ctrl + k           # delete from cursor to end of line
ctrl + w           # one word backward
esc + backspace    # one word backward
ctrl + d           # one character forward
ctrl + l           # clear the screen

# Undo
ctrl + _           # undo last change
