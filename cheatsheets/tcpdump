# List interfaces
tcpdump -D
tcpdump -i lo0 'host localhost and tcp port 80'

# Listen to DNS traffic
sudo tcpdump -i any port 53

# Display HTTP
tcpdump -i lo0 -A -s 0 'tcp port 80 and (((ip[2:2] - ((ip[0]&0xf)<<2)) - ((tcp[12]&0xf0)>>2)) != 0)'

