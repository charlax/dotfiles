grpcurl -plaintext \
  -d '{"field": "value"}' \
  server:50051 \
  package.YourService/YourMethod

# Healthcheck
grpcurl -plaintext $server:50051 grpc.health.v1.Health/Check

# With metadata
grpcurl -plaintext \
  -H 'authorization: Bearer token123' \
  -H 'x-custom-header: value' \
  -d '{"field": "value"}' \
  server:50051 \
  package.YourService/YourMethod

# List available services
grpcurl -plaintext server:50051 list

# List methods in a service
grpcurl -plaintext server:50051 list package.YourService

# Describe method (shows request/response structure)
grpcurl -plaintext server:50051 describe package.YourService.YourMethod

# With payload (-d must come before service)
grpcurl -d '{"id": 1234, "tags": ["foo","bar"]}' \
    grpc.server.com:443 my.custom.server.Service/Method

# With payload from command / file
grpcurl -d @ grpc.server.com:443 my.custom.server.Service/Method <<EOM
{
  "id": 1234,
  "tags": [
    "foor",
    "bar"
  ]
}
EOM

# With payload from file
grpcurl -d @ grpc.server.com:443 my.custom.server.Service/Method < ~/Downloads/thepayload.json

# Docs
# https://github.com/fullstorydev/grpcurl
