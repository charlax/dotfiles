# Install
brew install uv

# Create virtual env
uv venv

# Init a project
uv init example
cd example
uv add jupyter duckdb
uv run jupyter lab

# On an existing project
uv sync  # sync .venv

# Use the venv directly
source .venv/bin/activate
jupyter lab

# Upgrade packages
uv lock --upgrade
uv sync --verbose # or `uv run` will upgrade
