#!/bin/bash

# See also cheatsheet for entr

function usage {
    echo "Usage: $0 command"
    exit 0
}

function check_args {
    if [[ $# -eq 0 ]]; then
        usage
    fi
}

check_args "$@"
echo "$@"
"$@" || true
while sleep 1; do
    find . -not -path '*/\.*' -not -iname '*\.pyc' | entr -c -d "$@"
done
