# Display
font-size = 14

# Keyboard shortcuts
keybind = alt+cmd+arrow_right=next_tab
keybind = alt+cmd+arrow_left=previous_tab
keybind = cmd+arrow_right=goto_split:right
keybind = cmd+arrow_left=goto_split:left

# This is for vim ctrlp
keybind = ctrl+p=unbind

# Alt+Backspace to delete word in insert mode (sends Ctrl+W)
keybind = alt+backspace=text:\x17

# Show list of available themes: ghostty +list-themes
theme = Ghostty Default Style Dark

# For Claude code
keybind = shift+enter=text:\x1b\r

# Show all options
# ghostty +show-config --default --docs
