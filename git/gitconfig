[include]
  path = ~/.dotfiles/.gitconfig.local

[color]
    ui = true

[alias]
    authors = shortlog -ns
    b = branch -v
    c = !git add . && git commit -a && git push
    changelog = log --pretty=format:\" * %s\"
    changes = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\" --name-status
    co = checkout
    d = diff
    go = checkout -b
    l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    pr = !git commit -av && git push -f && hub pull-request
    recommit = !git commit --amend
    repush = !git recommit && git push -f
    rmbranch = branch -d
    s = status
    short = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\"
    st = status
    stashpush = !git stash && git pull && git push && git stash pop
    stat = status
    uncommit = reset --soft HEAD^
    unstage = reset HEAD

[core]
    excludesfile = ~/.gitignore
    quotepath = false
    editor = vim
    # pager = delta

[merge]
    tool = vimdiff
    conflictstyle = diff3
    prompt = false

[merge "pofile"]
    name = Gettext merge driver
    driver = git merge-po %O %A %B

[url "ssh://git@gitlab.com:"]
    insteadOf = https://gitlab.com

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[push]
    default = simple

[help]
    autocorrect = 1

[rerere]
    enabled = true

[user]
    name = Charles-Axel Dein
    email = 120501+charlax@users.noreply.github.com
    signingkey = 8FB355D70B073558BA1EC2F864C00027F3375D70

[pull]
    rebase = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[rebase]
    autoStash = true
[gpg]
    program = gpg
[commit]
    gpgsign = true
[init]
    defaultBranch = main

